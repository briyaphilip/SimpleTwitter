<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="briyaphilip"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="This is my tweet."
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/tvOptImg"
        android:layout_width="365dp"
        android:layout_height="207dp"
        android:layout_below="@+id/tvBody"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/tvScreenName"
        android:textColor="@color/medium_gray"
        android:text="@briyaphilip"
        android:layout_marginEnd="10dp"/>


    <Button
        android:id="@+id/fav"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="280dp"
        android:layout_below="@+id/tvOptImg"
        android:layout_marginBottom="3dp"
        android:background="@drawable/ic_vector_heart_stroke"/>

    <Button
        android:id="@+id/retweet"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/tvOptImg"
        android:layout_marginBottom="3dp"
        android:background="@drawable/ic_vector_retweet_stroke"
        />

    <View style="@style/Divider.Horizontal" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/userAt"
        android:text="3h"
        android:textColor="@color/medium_gray"
        />


</RelativeLayout>